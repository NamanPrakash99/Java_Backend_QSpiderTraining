    @Test
    public void testAgeInvalid() {
        List<Employee> list = new ArrayList<>();

        list.add(new Employee(1,"A",25,"IT"));
        list.add(new Employee(2,"B",16,"IT")); 
        list.add(new Employee(3,"C",30,"IT"));
        list.add(new Employee(4,"D",28,"IT"));
        list.add(new Employee(5,"E",22,"IT"));

        assertFalse(Employee1.validateEmployees(list));
    }
