package com.prac;

public class Employee {
	private int id;
	private String name;
	private int age;
	private String dept;
	
	public Employee(int id, String name, int age, String dept) {
		this.id = id;
		this.name = name;
		this.age = age;
		this.dept = dept;
	}
	
	public boolean isValidAge() {
		if(age>17) {
			return true;
		}else {
			return false;
		}
	}
	
	public boolean isValidName() {
		if(name==null) {
			return false;
		}else {
			return name.matches("[a-zA-Z]+");
		}
	}
	
	public boolean isValidDept() {
		if(dept==null || dept.length()<=1) {
			return false;
		}else {
			return dept.matches("[a-zA-Z]+");
		}
	}
	
}
