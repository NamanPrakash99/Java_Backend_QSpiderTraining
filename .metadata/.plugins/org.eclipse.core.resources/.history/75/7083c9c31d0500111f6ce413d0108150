    public void testAgeInvalid() {
    	List<Employee1> list = new ArrayList<>();

        list.add(new Employee1(1,"A",20000,25,"IT",""));
        list.add(new Employee1(2,"B",20000,16,"IT","")); 
        list.add(new Employee1(3,"C",20000,30,"IT",""));
        list.add(new Employee1(4,"D",20000,28,"IT",""));
        list.add(new Employee1(5,"E",20000,22,"IT",""));

        assertTrue(Employee1.validateEmployees(list));
    }
    
    @Test
    public void testAllValid() {
        List<Employee1> list = new ArrayList<>();

        list.add(new Employee1(1,"A",20000,25,"IT",""));
        list.add(new Employee1(2,"B",20000,16,"IT","")); 
        list.add(new Employee1(3,"C",20000,30,"IT",""));
        list.add(new Employee1(4,"D",20000,28,"IT",""));
        list.add(new Employee1(5,"E",20000,22,"IT",""));

        assertTrue(Employee1.validateEmployees(list));
    }
}
