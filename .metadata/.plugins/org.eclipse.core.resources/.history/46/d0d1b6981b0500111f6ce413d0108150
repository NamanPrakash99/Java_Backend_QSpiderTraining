package com.prac;
import java.util.List;

public class Employee1 {
	int id;
	String name;
	double salary;
	int age;
	String dept;
	String Dob;
	public Employee1(int id, String name, double salary, int age, String dept, String dob) {
		this.id = id;
		this.name = name;
		this.salary = salary;
		this.age = age;
		this.dept = dept;
		Dob = dob;
	}
	
	public boolean isValidAge() {
	    return age > 17;
	}

	public static boolean validateEmployees(List<Employee1> list) {

        if(list == null || list.isEmpty()) {
            return false;
        }

        if(list.size() < 5) {
            return false;
        }

        for(Employee e : list) {
            if(!e.isValidAge()) {
                return false;
            }
        }

        return true;
    }
	
	
}
